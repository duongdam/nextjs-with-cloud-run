{
  "hosting": [
    {
      "target": "[hosting-name]",
      "public": "out",
      "ignore": [
        "firebase.json",
        "*/.",
        "*/node_modules/*"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "index.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0, no-cache"
            }
          ]
        }
      ]
    }
  ]
}
